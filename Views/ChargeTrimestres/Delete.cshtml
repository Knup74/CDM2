@model CDM.Database.Models.ChargeTrimestre

<div class="alert alert-danger shadow-sm">
    <h4 class="alert-heading">Supprimer une charge</h4>

    <p>Confirmez-vous la suppression de la charge suivante ?</p>

    <ul>
        <li><strong>@Model.Libelle</strong></li>
        <li>Trimestre : @Model.Trimestre.Annee - T@Model.Trimestre.Numero</li>
        <li>Total sous-copros : @Model.SousCopros.Count</li>
    </ul>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
