@model CDM.Database.Models.ChargeTrimestre

@{
    ViewData["Title"] = "Supprimer une charge";
}

<h1>Supprimer cette charge</h1>

<dl class="row">
    <dt class="col-sm-3">Libell√©</dt>
    <dd class="col-sm-9">@Model.Libelle</dd>

    <dt class="col-sm-3">Trimestre</dt>
    <dd class="col-sm-9">@($"{Model.Trimestre.Annee} - T{Model.Trimestre.Numero}")</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
