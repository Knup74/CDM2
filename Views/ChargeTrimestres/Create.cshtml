@model CDM.Database.Models.ChargeTrimestre
@{
    ViewData["Title"] = "Nouvelle charge";
}

<h3 class="mb-3">Créer une charge de trimestre</h3>

<form asp-action="Create" class="shadow-sm p-4 bg-white rounded">
    <div class="mb-3">
        <label asp-for="Libelle" class="form-label"></label>
        <input asp-for="Libelle" class="form-control" />
        <span asp-validation-for="Libelle" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col">
            <label asp-for="MontantPrevisionnel" class="form-label"></label>
            <input asp-for="MontantPrevisionnel" class="form-control" />
        </div>
        <div class="col">
            <label asp-for="MontantReel" class="form-label"></label>
            <input asp-for="MontantReel" class="form-control" />
        </div>
    </div>

    <div class="mb-3 mt-3">
        <label class="form-label">Trimestre</label>
        <select asp-for="TrimestreId" class="form-select"
                asp-items="@(new SelectList(ViewBag.Trimestres, "Id", "Label"))">
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Sous-copropriétés</label>
        <div class="border rounded p-3">

            @foreach (var sc in ViewBag.SousCopros)
            {
                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox" 
                           name="SousCoprosIds"
                           value="@sc.Id" />

                    <label class="form-check-label">@sc.Nom</label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-success mt-3">Créer</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Annuler</a>
</form>
