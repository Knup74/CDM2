@model IEnumerable<CDM.Database.Models.ChargeTrimestre>

@{
    ViewData["Title"] = "Charges par trimestre";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Charges par trimestre</h3>
    <a asp-action="Create" class="btn btn-primary">➕ Nouvelle charge</a>
</div>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Libellé</th>
            <th>Montant prévu</th>
            <th>Montant réel</th>
            <th>Trimestre</th>
            <th>Sous-copros</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>

    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Libelle</td>
            <td>@item.MontantPrevisionnel €</td>
            <td>@item.MontantReel €</td>
            <td>@($"{item.Trimestre.Annee} - T{item.Trimestre.Numero}")</td>
            
            <td>
                @string.Join(", ", item.SousCopros.Select(sc => sc.SousCopropriete.Nom))
            </td>

            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Modifier</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Détails</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
