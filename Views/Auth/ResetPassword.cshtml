@model CDM.Models.ResetPasswordViewModel

<h3 class="text-center mt-4">Nouveau mot de passe</h3>

<div class="row justify-content-center">
    <div class="col-md-4">

        <form method="post" class="shadow-sm p-4 bg-white rounded">
            <input type="hidden" asp-for="Token" />

            <div class="mb-3">
                <label class="form-label">Nouveau mot de passe</label>
                <input asp-for="NewPassword" type="password" class="form-control" required />
            </div>

            <button class="btn btn-success w-100">Changer le mot de passe</button>
        </form>

    </div>
</div>
