@model CDM.Database.Models.Trimestre

@{
    ViewData["Title"] = "Détails du trimestre";
}

<h3 class="mb-3">Détails du trimestre</h3>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Année</dt>
            <dd class="col-sm-9">@Model.Annee</dd>

            <dt class="col-sm-3">Trimestre</dt>
            <dd class="col-sm-9">T@Model.Numero</dd>
        </dl>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mt-3">Modifier</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Retour</a>
