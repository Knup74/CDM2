@model CDM.Database.Models.Trimestre

@{
    ViewData["Title"] = "Supprimer un trimestre";
}

<div class="alert alert-danger shadow-sm">
    <h4 class="alert-heading">Confirmation de suppression</h4>
    <p>Êtes-vous sûr de vouloir supprimer le trimestre :</p>

    <ul>
        <li>Année : <strong>@Model.Annee</strong></li>
        <li>Numéro : <strong>T@Model.Numero</strong></li>
    </ul>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
