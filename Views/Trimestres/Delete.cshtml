@model CDM.Database.Models.Trimestre

@{
    ViewData["Title"] = "Supprimer - Trimestre";
}

<h1>Supprimer - Trimestre</h1>

<h4>Êtes-vous sûr de vouloir supprimer ce trimestre ?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-3">Année</dt>
        <dd class="col-sm-9">@Model.Annee</dd>

        <dt class="col-sm-3">Numéro</dt>
        <dd class="col-sm-9">@Model.Numero</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
