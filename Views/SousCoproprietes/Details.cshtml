@model CDM.Database.Models.SousCopropriete
@{
    ViewData["Title"] = "Détails";
}

<h3 class="mb-3">Détails de la sous-copropriété</h3>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">

            <dt class="col-sm-3">Nom</dt>
            <dd class="col-sm-9">@Model.Nom</dd>

            <dt class="col-sm-3">Nombre de lots</dt>
            <dd class="col-sm-9">@Model.Lots.Count</dd>

        </dl>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mt-3">Modifier</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Retour</a>
