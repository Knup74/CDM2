@model CDM.Database.Models.SousCopropriete

@{
    ViewData["Title"] = "Détails de la sous-copropriété";
}

<h1>Détails</h1>

<dl class="row">
    <dt class="col-sm-3">Nom</dt>
    <dd class="col-sm-9">@Model.Nom</dd>
</dl>

<h3>Lots associés</h3>

@if (Model.Lots != null && Model.Lots.Any())
{
    <table class="table table-striped">
        <thead>
            <tr><th>Numéro</th><th>Tantièmes</th></tr>
        </thead>
        <tbody>
        @foreach (var lot in Model.Lots)
        {
            <tr>
                <td>@lot.NumeroLot</td>
                <td>@lot.Tantiemes</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>Aucun lot associé.</p>
}

<h3>Charges associées</h3>

@if (Model.ChargeAssociations != null && Model.ChargeAssociations.Any())
{
    <table class="table table-striped">
        <thead>
            <tr><th>Charge</th><th>Prévisionnel</th><th>Réel</th></tr>
        </thead>
        <tbody>
        @foreach (var c in Model.ChargeAssociations)
        {
            <tr>
                <td>@c.ChargeTrimestre.Libelle</td>
                <td>@c.ChargeTrimestre.MontantPrevisionnel €</td>
                <td>@c.ChargeTrimestre.MontantReel €</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>Aucune charge affectée.</p>
}

<p class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Modifier</a>
    <a asp-action="Index" class="btn btn-secondary">Retour</a>
</p>
