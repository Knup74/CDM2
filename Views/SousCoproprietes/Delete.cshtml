@model CDM.Database.Models.SousCopropriete
@{
    ViewData["Title"] = "Supprimer une sous-copropriété";
}

<div class="alert alert-danger shadow-sm">
    <h4 class="alert-heading">Suppression</h4>
    <p>Voulez-vous vraiment supprimer cette sous-copropriété ?</p>

    <ul>
        <li><strong>Nom :</strong> @Model.Nom</li>
    </ul>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
