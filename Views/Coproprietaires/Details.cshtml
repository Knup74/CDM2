@model CDM.Database.Models.Coproprietaire

@{
    ViewData["Title"] = "Détails du copropriétaire";
}

<h3 class="mb-3">Détails du copropriétaire</h3>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Nom</dt>
            <dd class="col-sm-9">@Model.Nom</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mt-3">Modifier</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Retour</a>
