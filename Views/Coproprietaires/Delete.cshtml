@model CDM.Database.Models.Coproprietaire

@{
    ViewData["Title"] = "Supprimer un copropriétaire";
}

<h1>Supprimer un copropriétaire</h1>

<h4>Confirmez-vous la suppression ?</h4>

<dl class="row">
    <dt class="col-sm-3">Nom</dt>
    <dd class="col-sm-9">@Model.Nom</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
