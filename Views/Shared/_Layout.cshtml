@{
    var title = ViewData["Title"] ?? "CDM";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - CDM</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Site CSS compilé depuis SCSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>

    <!-- SIDEBAR -->
    <div class="sidebar">
        <div class="title">🏢 CDM</div>

        <a href="/">🏠 Accueil</a>
        <a asp-controller="Trimestres" asp-action="Index">📅 Trimestres</a>
        <a asp-controller="Coproprietaires" asp-action="Index">👤 Copropriétaires</a>
        <a asp-controller="Lots" asp-action="Index">🔢 Lots</a>
        <a asp-controller="SousCoproprietes" asp-action="Index">🏘 Sous-copropriétés</a>
        <a asp-controller="ChargeTrimestres" asp-action="Index">💰 Charges</a>
        <a asp-controller="ChargeTrimestreSousCopros" asp-action="Index">🔗 Associations Charges/Sous-copro</a>
        <a asp-controller="AppelsDeFonds" asp-action="Index">💸 Appels de fonds</a>
    </div>

    <!-- PAGE CONTENT -->
    <div class="content">
        <header class="mb-4">
            <h2>@title</h2>
            <hr />
        </header>

        <main role="main">
            @RenderBody()
        </main>

        <footer class="mt-4 text-muted">
            © @DateTime.Now.Year - CDM2
        </footer>
    </div>

    <!-- Bootstrap bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
