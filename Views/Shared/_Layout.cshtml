<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"] - CDM2</title>

    <!-- CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Ton CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body class="bg-light">
    @if (Context.Session.GetInt32("UserId") != null)
    {        
        <!-- NAVBAR RESPONSIVE -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">

                <!-- Logo -->
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    CDM
                </a>

                <!-- Bouton burger -->
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Menu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Liens -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    @* 🏠 Accueil (visible pour tous les utilisateurs connectés) *@
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Accueil</a>
                    </li>

                    @* 🎛 Administration — visible uniquement si role = admin *@
                    @if (Context.Session.GetString("UserRole") == "Admin")
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" 
                            data-bs-toggle="dropdown" aria-expanded="false">
                                Administration
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">

                                <li class="dropdown-header">Gestion des copropriétés</li>
                                <li><a class="dropdown-item" asp-controller="Coproprietaires" asp-action="Index">Copropriétaires</a></li>
                                <li><a class="dropdown-item" asp-controller="SousCoproprietes" asp-action="Index">Sous-copropriétés</a></li>
                                <li><a class="dropdown-item" asp-controller="Lots" asp-action="Index">Lots</a></li>

                                <li><hr class="dropdown-divider" /></li>

                                <li class="dropdown-header">Gestion comptable</li>
                                <li><a class="dropdown-item" asp-controller="Trimestres" asp-action="Index">Trimestres</a></li>
                                <li><a class="dropdown-item" asp-controller="ChargeTrimestres" asp-action="Index">Charges trimestrielles</a></li>
                                <li><a class="dropdown-item" asp-controller="ChargeTrimestreSousCopros" asp-action="Index">Répartition charges</a></li>
                                <li><a class="dropdown-item" asp-controller="AppelDeFonds" asp-action="Index">Appels de fond</a></li>

                            </ul>
                        </li>
                    }
                </ul>


                    <!-- Nav à droite -->
                    <ul class="navbar-nav ms-auto">
@if (Context.Session.GetInt32("UserId") != null)
{
    <li class="nav-item">
        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
            <button type="submit" class="btn btn-outline-light">
                <i class="bi bi-box-arrow-right"></i>
            </button>
        </form>
    </li>
}
</ul>


                </div>

            </div>
        </nav>
    }
    <!-- CONTENU -->
    <main class="container py-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-white border-top mt-auto py-3">
        <div class="container text-center text-muted small">
            © @DateTime.Now.Year - CDM2
        </div>
    </footer>

    <!-- Bootstrap JS (NÉCESSAIRE POUR LE MENU RESPONSIVE !) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
