@model IEnumerable<CDM.Database.Models.AppelDeFond>

@{
    ViewData["Title"] = "Appels de fonds";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Appels de fonds</h3>
    <a asp-action="Create" class="btn btn-primary">➕ Nouvel appel</a>
</div>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Copropriétaire</th>
            <th>Trimestre</th>
            <th>Montant dû</th>
            <th>Réglé</th>
            <th>Régularisation</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>

    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Coproprietaire.Nom</td>
            <td>@item.Trimestre.Annee - T@item.Trimestre.Numero</td>
            <td>@item.MontantDu €</td>
            <td>@item.MontantRegle €</td>
            <td>@item.Regularisation €</td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Modifier</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Détails</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
