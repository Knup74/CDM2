@model CDM.Database.Models.AppelDeFond

@{
    ViewData["Title"] = "Modifier un appel de fond";
}

<h1>Modifier</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Trimestre</label>
        <select asp-for="TrimestreId" asp-items="ViewBag.TrimestreId" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Copropriétaire</label>
        <select asp-for="CoproprietaireId" asp-items="ViewBag.CoproprietaireId" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Montant dû</label>
        <input asp-for="MontantDu" class="form-control" />
    </div>

    <div class="form-group">
        <label>Montant réglé</label>
        <input asp-for="MontantRegle" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Enregistrer</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Annuler</a>
</form>
