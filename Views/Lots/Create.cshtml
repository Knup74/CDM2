@model CDM.Database.Models.Lot
@{
    ViewData["Title"] = "Créer un lot";
}

<h3 class="mb-3">Créer un lot</h3>

<form asp-action="Create" class="shadow-sm p-4 bg-white rounded">

    <div class="mb-3">
        <label asp-for="NumeroLot" class="form-label"></label>
        <input asp-for="NumeroLot" class="form-control" />
        <span asp-validation-for="NumeroLot" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Tantiemes" class="form-label"></label>
        <input asp-for="Tantiemes" class="form-control" />
        <span asp-validation-for="Tantiemes" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Copropriétaire</label>
        <select asp-for="CoproprietaireId" class="form-select"
                asp-items="@(new SelectList(ViewBag.Coproprietaires, "Id", "NomComplet"))">
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Sous-copropriété</label>
        <select asp-for="SousCoproprieteId" class="form-select"
                asp-items="@(new SelectList(ViewBag.SousCopros, "Id", "Nom"))">
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Créer</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Annuler</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
