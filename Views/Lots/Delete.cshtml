@model CDM.Database.Models.Lot
@{
    ViewData["Title"] = "Supprimer un lot";
}

<div class="alert alert-danger shadow-sm">
    <h4 class="alert-heading">Suppression d'un lot</h4>
    <p>Confirmez-vous la suppression de ce lot ?</p>

    <ul>
        <li><strong>Lot :</strong> @Model.NumeroLot</li>
        <li><strong>Tantièmes :</strong> @Model.Tantiemes</li>
        <li><strong>Copropriétaire :</strong> @Model.Coproprietaire?.Nom</li>
        <li><strong>Sous-copropriété :</strong> @Model.SousCopropriete?.Nom</li>
    </ul>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
