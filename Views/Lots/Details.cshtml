@model CDM.Database.Models.Lot

@{
    ViewData["Title"] = "Détails du lot";
}

<h1>Détails du lot</h1>

<dl class="row">
    <dt class="col-sm-3">Numéro</dt>
    <dd class="col-sm-9">@Model.NumeroLot</dd>

    <dt class="col-sm-3">Tantièmes</dt>
    <dd class="col-sm-9">@Model.Tantiemes</dd>

    <dt class="col-sm-3">Copropriétaire</dt>
    <dd class="col-sm-9">@Model.Coproprietaire?.Nom</dd>

    <dt class="col-sm-3">Sous-copropriété</dt>
    <dd class="col-sm-9">@Model.SousCopropriete?.Nom</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Modifier</a>
    <a asp-action="Index" class="btn btn-secondary">Retour</a>
</p>
