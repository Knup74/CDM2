@model IEnumerable<CDM.Database.Models.Lot>
@{
    ViewData["Title"] = "Lots";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Lots</h3>
    <a asp-action="Create" class="btn btn-primary">➕ Ajouter un lot</a>
</div>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th># Lot</th>
            <th>Tantièmes</th>
            <th>Copropriétaire</th>
            <th>Sous-copropriété</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>

    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.NumeroLot</td>
            <td>@item.Tantiemes</td>
            <td>@item.Coproprietaire?.Nom</td>
            <td>@item.SousCopropriete?.Nom</td>

            <td class="text-end table-actions">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Modifier</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Détails</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
