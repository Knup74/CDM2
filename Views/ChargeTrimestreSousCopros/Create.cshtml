@model CDM.Database.Models.ChargeTrimestreSousCopro

@{
    ViewData["Title"] = "Créer une association";
}

<h3 class="mb-3">Associer une charge à une sous-copropriété</h3>

<form asp-action="Create" class="shadow-sm p-4 bg-white rounded">

    <div class="mb-3">
        <label class="form-label">Charge</label>
        <select asp-for="ChargeTrimestreId" class="form-select"
                asp-items="@(new SelectList(ViewBag.Charges, "Id", "Label"))">
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Sous-copropriété</label>
        <select asp-for="SousCoproprieteId" class="form-select"
                asp-items="@(new SelectList(ViewBag.SousCopros, "Id", "Nom"))">
        </select>
    </div>

    <button type="submit" class="btn btn-success">Créer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
